{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}
{% block section %}{% endblock %}
{% block body %}
    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.pseudo }}</td>
                <td>{{ auteur.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <button class="btn btn-primary"><a href="{{ path('auteur_show', {'id': auteur.id}) }}">show</a></button>
                    <button class="btn btn btn-warning"><a href="{{ path('auteur_edit', {'id': auteur.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('auteur_new') }}">Create new</a></button>
{% endblock %}
