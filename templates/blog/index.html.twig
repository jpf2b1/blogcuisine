{% extends 'base.html.twig' %}

{% block title %}Index MonBlogCuisine{% endblock %}
{# {% block header %}{% endblock %} #}


{% block section %} 
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Bienvenue sur Mon Blog Cuisine!</h1>
        <p>Site communautaire  autour de la cuisine avec possibilité de publier et d'échanger sur vos propres recettes</p>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Lire Plus &raquo;</a></p>
      </div>
    </div>
{% endblock %}
{% block body %}

  <div class="row imghome mb-2">
    <div class="row imghome ml-3"><h1>Recette du jour :</h1></div>
        {% for recette in recettes %} 
        <div class="col-md-12">
          <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-primary">Temps de préparation : {{ recette.tempsPreparation | date('H:i:s')}}</strong>
              {# <h6>Ingredient : {{ recette.quantite.id }}</h6> #}
              <h3 class="mb-0">
                <a class="text-dark" href="{{ path('blog_show',{'id': recette.id}) }}">{{recette.titre}}</a>
              </h3>
              <div class="mb-1 text-muted">Nov 12</div>
              <p class="card-text mb-auto">{{ recette.preparation }}</p>
              <p><a href="{{ path('blog_show',{'id': recette.id}) }}">Lire la suite...</a></p>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block" src="{{ asset('upload/' ~ recette.image) }}" alt="Card image cap">
          </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
