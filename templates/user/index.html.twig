{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block section %}{% endblock %}
{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Useremail</th>
                <th>Password</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roles.0 }}</td>
                <td>
                    <button class="btn btn-success"><a href="{{ path('user_show', {'id': user.id}) }}">show</a></button>
                    <button class="btn btn-success"><a href="{{ path('user_edit', {'id': user.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('user_new') }}">Create new</a></button>
{% endblock %}
